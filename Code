#include <FastLED.h>

// How many leds in your strip?
#define NUM_LEDS 2

//What pin is DIN connected to
#define DATA_PIN 5
#define buttonPin 4

// Define the array of leds
CRGB leds[NUM_LEDS];
int buttonValue;

void setup() {
  // Uncomment/edit one of the following lines for your leds arrangement.
  FastLED.addLeds<WS2812, DATA_PIN, RGB>(leds, NUM_LEDS); // GRB ordering is assumed
  pinMode(DATA_PIN,OUTPUT);
  pinMode(buttonPin, INPUT);
}

void loop() {
  buttonValue = digitalRead(buttonPin);

  if (buttonValue == HIGH){
    leds[0] = CRGB(250, 0, 250);
    leds[1] = CRGB(250, 0, 250);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(240, 0, 240);
    leds[1] = CRGB(240, 0, 240);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(230, 0, 230);
    leds[1] = CRGB(230, 0, 230);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(220, 0, 220);
    leds[1] = CRGB(220, 0, 220);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(210, 0, 210);
    leds[1] = CRGB(210, 0, 210);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(200, 0, 200);
    leds[1] = CRGB(200, 0, 200);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(190, 0, 190);
    leds[1] = CRGB(190, 0, 190);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(180, 0, 180);
    leds[1] = CRGB(180, 0, 180);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(170, 0, 170);
    leds[1] = CRGB(170, 0, 170);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(160, 0, 160);
    leds[1] = CRGB(160, 0, 160);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(150, 0, 150);
    leds[1] = CRGB(150, 0, 150);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(140, 0, 140);
    leds[1] = CRGB(140, 0, 140);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(130, 0, 130);
    leds[1] = CRGB(130, 0, 130);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(120, 0, 120);
    leds[1] = CRGB(120, 0, 120);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(110, 0, 110);
    leds[1] = CRGB(110, 0, 110);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(100, 0, 100);
    leds[1] = CRGB(100, 0, 100);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(90, 0, 90);
    leds[1] = CRGB(90, 0, 90);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(80, 0, 80);
    leds[1] = CRGB(80, 0, 80);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(70, 0, 70);
    leds[1] = CRGB(70, 0, 70);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(60, 0, 60);
    leds[1] = CRGB(60, 0, 60);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(50, 0, 50);
    leds[1] = CRGB(50, 0, 50);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(40, 0, 40);
    leds[1] = CRGB(40, 0, 40);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(30, 0, 30);
    leds[1] = CRGB(30, 0, 30);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(20, 0, 20);
    leds[1] = CRGB(20, 0, 20);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(10, 0, 10);
    leds[1] = CRGB(10, 0, 10);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(20, 0, 20);
    leds[1] = CRGB(20, 0, 20);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(30, 0, 30);
    leds[1] = CRGB(30, 0, 30);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(40, 0, 40);
    leds[1] = CRGB(40, 0, 40);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(50, 0, 50);
    leds[1] = CRGB(50, 0, 50);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(60, 0, 60);
    leds[1] = CRGB(60, 0, 60);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(70, 0, 70);
    leds[1] = CRGB(70, 0, 70);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(80, 0, 80);
    leds[1] = CRGB(80, 0, 80);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(90, 0, 90);
    leds[1] = CRGB(90, 0, 90);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(100, 0, 100);
    leds[1] = CRGB(100, 0, 100);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(110, 0, 110);
    leds[1] = CRGB(110, 0, 110);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(120, 0, 120);
    leds[1] = CRGB(120, 0, 120);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(130, 0, 130);
    leds[1] = CRGB(130, 0, 130);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(140, 0, 140);
    leds[1] = CRGB(140, 0, 140);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(150, 0, 150);
    leds[1] = CRGB(150, 0, 150);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(160, 0, 160);
    leds[1] = CRGB(160, 0, 160);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(170, 0, 170);
    leds[1] = CRGB(170, 0, 170);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(180, 0, 180);
    leds[1] = CRGB(180, 0, 180);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(190, 0, 190);
    leds[1] = CRGB(190, 0, 190);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(200, 0, 200);
    leds[1] = CRGB(200, 0, 200);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(210, 0, 210);
    leds[1] = CRGB(210, 0, 210);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(220, 0, 220);
    leds[1] = CRGB(220, 0, 220);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(230, 0, 230);
    leds[1] = CRGB(230, 0, 230);
    FastLED.show();
    delay(100);
    leds[0] = CRGB(240, 0, 240);
    leds[1] = CRGB(240, 0, 240);
    FastLED.show();
    delay(100);
  } else if (buttonValue == LOW){
    leds[0] = CRGB(0, 0, 0);
    leds[1] = CRGB(0, 0, 0);
    FastLED.show();
  }

}
